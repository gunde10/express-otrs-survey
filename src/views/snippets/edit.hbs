<div class="snippet-container">
  <h1>
    Edit Snippet
  </h1>
  <div class="snippet-wrapper">
    <div class="snippet-upper">
      <p class="author-text">Author: {{viewData.author}}</p>
      <p class="title-text">Title: {{viewData.title}}</p>
    </div>
    <div class="snippet-lower">
    <form method="post" action="./snippets/{{viewData.id}}/update">
    <textarea class="snippet-text" name="text">{{viewData.text}}</textarea>
    </div>
      <input type="hidden" name="id" value="{{viewData.id}}" />
      <button type="submit" class="btn btn-lg btn-primary" autofocus="autofocus">Edit Snippet</button>
    </form>
  </div>
</div>